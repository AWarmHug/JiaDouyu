<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/AppTheme.CardView"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/room_src"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            tools:layout_width="200dp"
            tools:src="@drawable/pic" />

        <TextView
            android:id="@+id/online_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/room_src"
            android:layout_marginBottom="4dp"
            android:drawableLeft="@drawable/ic_vec_heat"
            android:drawablePadding="4dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="1.5万" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/online_num"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:drawablePadding="4dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text="1.5万" />

        <TextView
            android:id="@+id/room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/room_src"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
