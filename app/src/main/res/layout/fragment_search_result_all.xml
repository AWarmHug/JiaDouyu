<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.v7.widget.GridLayout
            android:id="@+id/grid_anchor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:visibility="gone"
            app:columnCount="4"
            app:orientation="horizontal"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="主播"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="0" />

            <TextView
                android:id="@+id/tv_more_anchor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_vec_right"
                android:drawablePadding="8dp"
                android:gravity="end|center_vertical"
                android:text="更多"
                android:textColor="@color/text_dark_light"
                android:textSize="16sp"
                app:layout_columnSpan="3"
                app:layout_gravity="fill" />


        </android.support.v7.widget.GridLayout>

        <com.warm.flowlayout.flow.FlowLayout
            android:id="@+id/flow_anchor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:flow_horizontalSize="4"
            app:flow_spaceH="16dp"
            app:flow_spaceV="8dp" />

        <android.support.v7.widget.GridLayout
            android:id="@+id/grid_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:visibility="gone"
            app:columnCount="2"
            app:orientation="horizontal"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="视频"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="0" />

            <TextView
                android:id="@+id/tv_more_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_vec_right"
                android:drawablePadding="8dp"
                android:gravity="end|center_vertical"
                android:text="更多"
                android:textColor="@color/text_dark_light"
                android:textSize="16sp"
                app:layout_columnSpan="1"
                app:layout_gravity="fill" />


        </android.support.v7.widget.GridLayout>

        <com.warm.flowlayout.flow.FlowLayout
            android:id="@+id/flow_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:flow_horizontalSize="2"
            app:flow_spaceH="4dp"
            app:flow_spaceV="4dp" />

        <android.support.v7.widget.GridLayout
            android:id="@+id/grid_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:visibility="gone"
            app:columnCount="2"
            app:orientation="horizontal"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="直播"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="0" />

            <TextView
                android:id="@+id/tv_more_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_vec_right"
                android:drawablePadding="8dp"
                android:gravity="end|center_vertical"
                android:text="更多"
                android:textColor="@color/text_dark_light"
                android:textSize="16sp"
                app:layout_columnSpan="1"
                app:layout_gravity="fill" />

        </android.support.v7.widget.GridLayout>

        <com.warm.flowlayout.flow.FlowLayout
            android:id="@+id/flow_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:flow_horizontalSize="2"
            app:flow_spaceH="4dp"
            app:flow_spaceV="4dp" />

    </LinearLayout>
</ScrollView>

