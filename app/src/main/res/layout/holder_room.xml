<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        style="@style/AppTheme.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:contentPaddingBottom="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_heat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_vec_heat"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="1000" />

            <TextView
                android:id="@+id/isLive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/iv_pic"
                android:background="@drawable/bg_blue_solid_2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:text="直播中"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_pic"
                android:layout_marginStart="8dp"
                android:paddingBottom="4dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="可爱的小姐姐"
                tools:textColor="@color/text_dark_light" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_pic"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_vec_anchor"
                android:drawablePadding="4dp"
                android:textSize="12sp"
                tools:text="可爱的小姐姐" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>